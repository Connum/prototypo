{
	"formula": {
		"$hDir": "/left$/.test(params.side) ? -1 : 1",
		"$vDir": "/^top/.test(params.side) ? -1 : 1",

		"0": "vm 0 {{ 1 * $vDir }}",
		"1": "rC 0 0 0 0 {{ find({y: self[0].y + serifHeight * $vDir, on:params.on }) }}",
		"2": "L {{ self[1].x + serifWidth * $hDir }} {{ serifMedian * serifHeight * $vDir }}",
		"3": "L {{ self[2].x + serifTerminal * serifWidth * $hDir }} {{ self[2].y -self[2].y / 2  * $vDir }}",
		"4": "L {{ self[2].x }} 0",

		"invert": "( $vDir * $hDir ) == -1"
	}
}